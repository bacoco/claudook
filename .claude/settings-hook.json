{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py task_orchestrator.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py smart_controller.py session-start"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py smart_context.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py security_guard.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py git_backup.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py analytics_tracker.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py smart_controller.py post-tool"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py perf_optimizer.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py doc_enforcer.py"
          }
        ]
      }
    ]
  }
}