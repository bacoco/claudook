{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py smart_controller.py session-start"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py smart_context.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/claudook/hook_runner.py smart_controller.py post-tool"
          }
        ]
      }
    ]
  }
}